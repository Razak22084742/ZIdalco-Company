# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here
SUPABASE_MOCK=false

# Comma-separated list of allowed admin emails
ADMIN_EMAILS=zidalcoltd@gmail.com
ADMIN_SIGNUP_ENABLED=false
SUPABASE_MOCK=false

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Security
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://www.mysite.com,https://mysite.com,https://zidalco.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_ATTEMPTS=5
RATE_LIMIT_LOCKOUT_MS=1800000
